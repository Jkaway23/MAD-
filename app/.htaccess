# Deny all direct access to app folder
# This protects sensitive application files from direct browser access

<IfModule mod_authz_core.c>
    # Apache 2.4+
    Require all denied
</IfModule>

<IfModule !mod_authz_core.c>
    # Apache 2.2
    Order deny,allow
    Deny from all
</IfModule>

# Custom error page
ErrorDocument 403 /lecture27/aimvc/public/errors/403.php
